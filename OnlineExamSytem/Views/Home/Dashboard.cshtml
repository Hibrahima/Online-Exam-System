@{
    ViewBag.Title = "Dashboard";
}

<h2>Dashboard</h2>

<div class="container">
    <div class="row">
        <div class="col-sm-3">
            <div class="lay_dsh">
                <div class="block">
                    @Html.ActionLink(Resource.layout_dsh.ToUpper(), "Dashboard", "Home", null, new { @class = "dsh_a" }) <br />
                    <!--<img src="~/Assets/home.png" alt="An image" class="dsh_img" /> -->
                    <i class="fa fa-home" aria-hidden="true" style=" font-size:65px; padding-top: 3px; color:#F48FB1" ;> </i>
                </div>
            </div>
        </div>
        <div class="col-sm-3">
            <div class="lay_settings">
                <div class="block">
                    @Html.ActionLink(Resource.layout_settings.ToUpper(), "ChangePassword", "Manage", null, new { @class = "dsh_a" })  <br />
                    <i class="fa fa-cog" aria-hidden="true" style=" font-size:65px; padding-top: 3px; color:#90CAF9" ;></i>
                </div>
            </div>

        </div>
          <div class="col-sm-3">
              <div class="lay_exam">
                  <div class="block">
                    <span class="badge">@ViewBag.examCount</span>
                     @Html.ActionLink(Resource.layout_exam.ToUpper(), "Index", "Exam", null, new { @class = "dsh_a" }) <br />
                     <i class="fa fa-folder" aria-hidden="true" style=" font-size:65px; padding-top: 3px; color:#80CBC4" ;></i>
                  </div>
             </div>
         </div>
@if (User.IsInRole("Admin"))
{
        <div class="col-sm-3">
            <div class="lay_category">
                <div class="block">
                    <span class="badge">@ViewBag.catCount</span>
                    @Html.ActionLink(Resource.layout_category.ToUpper(), "GetAllCategories", "Category", null, new { @class = "dsh_a" }) <br />
                    <i class="fa fa-folder-open" aria-hidden="true" style="font-size:65px; padding-top :3px; color:#EF9A9A" ;></i>
                </div>
            </div>
        </div>
}
    </div>
@if (User.IsInRole("Admin"))
{
    <div class="row">
        <div class="col-sm-3">
            <div class="lay_user">
                <div class="block">
                    <span class="badge">@ViewBag.userCount</span>
                    @Html.ActionLink(Resource.layout_user.ToUpper(), "GetAllUsers", "Users", null, new { @class = "dsh_a" }) <br />
                    <i class="fa fa-users" aria-hidden="true" style=" font-size:60px; padding-top: 3px; color:#5C6BC0" ;></i>
                </div>
            </div>
        </div>
        <div class="col-sm-3">
            <div class="lay_question">
                <div class="block">
                    <span class="badge"> @ViewBag.questCount </span>
                    @Html.ActionLink(Resource.layout_question.ToUpper(), "GetAllQuestions", "Question", null, new { @class = "dsh_a" }) <br />
                    <i class="fa fa-bars" aria-hidden="true" style=" font-size:65px; padding-top: 3px; color:#CE93D8" ;></i>
                </div>
            </div>
    </div>
        
    </div>
}

</div>